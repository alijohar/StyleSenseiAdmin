<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Stylistet" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="homeAsUpIndicator">@drawable/back_reverse</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->

        <item name="android:fontFamily">@font/main_font</item>
        <item name="fontFamily">@font/main_font</item>
    </style>


    <!-- Text theme. -->
    <style name="AppTheme" parent="Theme.Stylistet">
        <item name="android:textViewStyle">@style/TajawalTextViewStyle</item>
        <item name="android:buttonStyle">@style/TajawalButtonStyle</item>
    </style>

    <style name="TajawalTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/tajawal_light</item>
    </style>

    <style name="TajawalButtonStyle" parent="android:Widget.Holo.Button">
        <item name="fontFamily">@font/tajawal_bold</item>
    </style>



    <style name="Theme.Stylistet.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Stylistet.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>