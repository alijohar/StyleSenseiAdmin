<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="item"
            type="com.example.stylesenseiadmin.model.ItemResults" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingBottom="@dimen/normal_magrin"
        android:orientation="vertical">


        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/item_image"
            android:layout_gravity="center"
            android:maxWidth="270dp"
            android:layout_margin="@dimen/normal_magrin"
            app:riv_corner_radius="12dp"
            android:layout_height="wrap_content"
            app:loadImage="@{item}"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"  
            android:layout_width="wrap_content"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/normal_magrin">


            <TextView
                android:id="@+id/item_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="@{item.name}"
                android:textStyle="bold"
                android:paddingRight="@dimen/normal_magrin"
                android:paddingLeft="@dimen/normal_magrin"
                 />

        </LinearLayout>

    </LinearLayout>
</layout>